<html lang="en" class="bg-white text-black dark:bg-black dark:text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>jqnotjq.com</title>
    <link rel="stylesheet" href="/styles.css" />

    <!-- ðŸŒ’ Auto-apply dark mode on page load -->
    <script>
      if (
        localStorage.getItem('theme') === 'dark' ||
        (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>

  <body class="min-h-screen font-sans relative overflow-hidden bg-white text-black dark:bg-black dark:text-white">

    <!-- ðŸŽ¨ Background image layer -->
    <div
      class="absolute inset-0 z-0 bg-cover bg-center blur-sm opacity-60 pointer-events-none"
      style="background-image: url('/bg.jpeg');"
    ></div>

    <!-- ðŸ§­ Navigation bar -->
    <div class="relative z-10 flex flex-col min-h-screen">
      <header class="p-4 flex justify-between items-center shadow-md bg-softpurple dark:bg-softpurple-dark text-white">
        <nav class="flex gap-4">
  <a 
    href="/" 
    class={`hover:underline ${Astro.url.pathname === '/' ? 'underline font-bold' : ''}`}
  >
    Home
  </a>
  <a 
    href="/work" 
    class={`hover:underline ${Astro.url.pathname.startsWith('/work') ? 'underline font-bold' : ''}`}
  >
    Work
  </a>
  <a 
    href="/music" 
    class={`hover:underline ${Astro.url.pathname.startsWith('/music') ? 'underline font-bold' : ''}`}
  >
    Music
  </a>
  <a 
    href="/social" 
    class={`hover:underline ${Astro.url.pathname.startsWith('/social') ? 'underline font-bold' : ''}`}
  >
    Social
  </a>
</nav>

        <button
  aria-label="Toggle dark mode"
  onclick="
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  "
  class="border border-white px-3 py-1 rounded hover:bg-white hover:text-softpurple transition"
>
  ðŸŒ“
</button>

      </header>

      <!-- ðŸ“¦ Page content -->
      <main class="flex-1 p-6">
        <div class="bg-white/80 dark:bg-black/80 backdrop-blur-md rounded-lg shadow-md p-6 max-w-4xl mx-auto text-black dark:text-white">
          <slot />
        </div>
      </main>

      <!-- ðŸ“¬ Footer -->
      <footer class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
        Â© 2025 Jessica Drew Quiroga
      </footer>
    </div>
  </body>
</html>
